CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f
RM_TODO = $(RM)
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

clean:
	$(RM_TODO) *~ $(NAME)

oclean:
	$(RM_TODO) $(OBJ)

fclean:
	$(RM_TODO) *~ $(OBJ) $(NAME)

re: oclean all
